@model AspNetPortfolioApp1.Models.Item

@{
    ViewData["Title"] = "Create New Item";
}

<h3>Create New Item</h3>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price" required />
    </div>
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories" required>
            <option value="">-- Select Category --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
